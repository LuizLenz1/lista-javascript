<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora Simples</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
            margin-top: 50px;
            background-color: #f4f4f4;
            color: #333;
        }
        .campo-entrada {
            margin: 10px;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 200px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #218838;
        }
        #resultado {
            font-size: 20px;
            margin-top: 20px;
            font-weight: bold;
            color: #007BFF;
        }
    </style>
</head>
<body>
    <h1>Calculadora Simples</h1>
    <div>
        <input type="number" id="numero1" class="campo-entrada" placeholder="Primeiro número">
        <input type="number" id="numero2" class="campo-entrada" placeholder="Segundo número">
    </div>
    <button id="botaoCalcular">Calcular</button>
    <div id="resultado">Resultado: </div>

    <script>
        const campoNumero1 = document.getElementById("numero1");
        const campoNumero2 = document.getElementById("numero2");
        const resultadoDiv = document.getElementById("resultado");
        const botaoCalcular = document.getElementById("botaoCalcular");

        function calcularSoma() {
            const numero1 = parseFloat(campoNumero1.value) || 0;
            const numero2 = parseFloat(campoNumero2.value) || 0;

            const soma = numero1 + numero2;

            resultadoDiv.textContent = "Resultado: " + soma;
            console.log("A soma calculada é: " + soma);
        }

        botaoCalcular.addEventListener("click", calcularSoma);
    </script>
</body>
</html>
